{
    "compilerOptions": {
      "target": "ESNext",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "composite": true,
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["packages/*/src"],
    "exclude": ["node_modules", "dist"]
  }
  