{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": ["./"],
  },
  "exclude": ["config", "**/*.test.ts", "infrastructure", "**/*.d.ts"]
}
